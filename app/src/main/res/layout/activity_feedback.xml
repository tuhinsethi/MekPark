<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        tools:context=".Activities.FeedbackActivity"

        android:layout_margin="16dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@color/white">


            <LinearLayout
                android:layout_width="match_parent"

                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please rate your experience"
                    android:fontFamily="@font/mont_semibold"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mont_med"
                    android:text="Do let us know your thoughts"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mont_med"
                    android:text="your thoughts matters!"
                    android:layout_gravity="center"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/smile_trippy"
                    android:layout_marginTop="40dp" />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/three_stars"
                    android:layout_marginTop="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:text="Enter Details"
                    android:fontFamily="@font/mont_reg"
                    android:textColor="@color/grey_white"
                    android:textSize="10sp"
                    android:layout_marginBottom="10dp"


                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"

                    android:padding="10dp"
                    android:textSize="10sp"
                    android:fontFamily="@font/mont_reg"
                    android:id="@+id/textproblem"
                    android:textColor="@color/grey_white"

                    android:layout_height="80dp"
                    android:background="@drawable/button_bg"
                    android:text="Describe your problem..." />


                <Button
                    android:layout_marginTop="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_box_redback"
                    android:padding="10dp"

                    android:text="Submit Feedback"
                    android:textAllCaps="false"
                    android:fontFamily="@font/mont_reg"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </LinearLayout>








    </RelativeLayout>

</ScrollView>