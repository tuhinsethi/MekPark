<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    tools:context=".MyVehicles">

    <TextView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/grey_white"
        android:fontFamily="@font/mont_reg"
        android:text="choose your default vehicle"></TextView>

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/recycler_vehicle"
       ></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_box_redback"
            android:text="Add new Vehicle"
            android:fontFamily="@font/mont_med"
            android:textAllCaps="false"
            android:textColor="@color/white"></Button>
    </RelativeLayout>

</LinearLayout>