<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_item">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="My Account"
        android:paddingTop="20dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="16dp"

        android:drawableStart="@drawable/profile_dummy"
        android:textSize="14sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Bookings"
        android:paddingTop="8dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="16dp"
        android:drawableEnd="@drawable/arrow_icon"
        android:drawableStart="@drawable/wallet_dummy"
        android:textSize="14sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="About Us"
        android:paddingTop="8dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="16dp"

        android:drawableStart="@drawable/alert_exclamation"
        android:textSize="14sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Services"
        android:paddingTop="8dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="16dp"
        android:drawableEnd="@drawable/arrow_icon"
        android:drawableStart="@drawable/settings_red"
        android:textSize="14sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Notifications"
        android:paddingTop="8dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="16dp"

        android:drawableStart="@drawable/bell_icon"
        android:textSize="14sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Logout"
        android:paddingTop="8dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="16dp"

        android:drawableStart="@drawable/logout2"
        android:textSize="14sp" />


</LinearLayout>