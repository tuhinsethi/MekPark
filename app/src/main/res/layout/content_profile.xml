<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context=".profile"
    android:background="@color/white"
    tools:showIn="@layout/activity_profile">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"

               android:padding="16dp"
               android:layout_marginTop="6dp"

               android:layout_height="wrap_content">

               <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"

                   android:layout_marginRight="10dp"
                   android:src="@drawable/back_arrow"
                   android:onClick="onReturn"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Profile"
                   android:textSize="16sp"
                   android:fontFamily="@font/gotham_med"
                   android:textColor="@color/black"/>

           </LinearLayout>

           <View

               android:layout_marginTop="4dp"

               android:layout_height="1dp"
               android:background="@color/chart_light_grey"
               android:layout_width="match_parent"
               >


           </View>

           <LinearLayout
               android:layout_width="match_parent"
               android:padding="16dp"

               android:layout_height="wrap_content">

               <ImageView
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/photu_person"/>



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="16dp"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Hi"
                       android:textColor="@color/black"
                       android:fontFamily="@font/mont_bold"

                       android:textSize="20sp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="MekPark!"
                       android:textColor="@color/black"
                       android:fontFamily="@font/mont_bold"

                       android:textSize="20sp"/>

               </LinearLayout>



           </LinearLayout>

           <View

               android:layout_marginTop="1dp"

               android:layout_height="1dp"
               android:background="@color/chart_light_grey"
               android:layout_width="match_parent"
               >


           </View>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/light_background"
               android:padding="16dp"
               android:orientation="vertical">

               <TextView

                   android:layout_marginLeft="28dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Name"
                   android:textColor="@color/app_caption_dark_grey"
                   android:fontFamily="@font/mont_reg"
                   android:textSize="10sp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView

                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/profile_dummy"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"

                       android:layout_weight="1"
                       android:textSize="14sp"
                       android:fontFamily="@font/mont_semibold"
                       android:text="Mr. MekPark"
                       android:paddingLeft="10dp"/>


                   <ImageView
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:src="@drawable/greentick"

                       />
               </LinearLayout>

               <View

                   android:layout_marginTop="14dp"
                   android:layout_marginBottom="14dp"

                   android:layout_height="1dp"
                   android:background="@color/chart_light_grey"
                   android:layout_width="match_parent"
                   >


               </View>



               <TextView

                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="28dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Mobile Number"
                   android:textColor="@color/app_caption_dark_grey"
                   android:fontFamily="@font/mont_reg"
                   android:textSize="10sp"/>

               <LinearLayout
                   android:paddingTop="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_marginTop="2dp"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/mobile_icon"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"

                       android:layout_weight="1"
                       android:textSize="14sp"
                       android:fontFamily="@font/mont_semibold"
                       android:text="+91-8867714446"
                       android:paddingLeft="10dp"/>


                   <ImageView
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:src="@drawable/greytick"


                       />
               </LinearLayout>
               <View

                   android:layout_marginTop="16dp"
                   android:layout_marginBottom="16dp"


                   android:layout_height="1dp"
                   android:background="@color/chart_light_grey"
                   android:layout_width="match_parent"
                   >


               </View>



               <TextView

                   android:layout_marginTop="8dp"
                   android:layout_marginLeft="28dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="e-mail id"
                   android:textColor="@color/app_caption_dark_grey"
                   android:fontFamily="@font/mont_reg"
                   android:textSize="10sp"/>

               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_marginTop="2dp"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/email_icon"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="10dp"
                       android:layout_weight="1"

                       android:fontFamily="@font/mont_semibold"
                       android:text="myemail123@id.com"
                       android:textColor="@color/black"
                       android:textSize="14sp" />


                   <ImageView

                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:src="@drawable/greytick"



                       />
               </LinearLayout>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Valid to:"

                   android:textColor="@color/dark_grey_button"
                   android:fontFamily="@font/mont_semibold"
                   android:textSize="16sp"
                   android:layout_marginTop="20dp"/>



               <TextView



                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="RC number"
                   android:layout_marginTop="16dp"
                   android:textColor="@color/app_caption_dark_grey"
                   android:fontFamily="@font/mont_reg"
                   android:textSize="10sp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                   <TextView
                       android:layout_marginTop="3dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/mont_semibold"
                       android:textSize="14sp"

                       android:textColor="@color/black"
                       android:text="filename.pdf"/>
                   <ImageView
                       android:layout_marginLeft="90dp"
                       android:layout_width="14dp"
                       android:layout_weight="1"


                       android:layout_height="16dp"
                       android:src="@drawable/attach_icon"/>
                   <ImageView
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:src="@drawable/greentick"/>



               </LinearLayout>


               <View

                   android:layout_marginTop="12dp"

                   android:layout_marginBottom="12dp"
                   android:layout_height="1dp"
                   android:background="@color/chart_light_grey"
                   android:layout_width="match_parent"
                   >


               </View>
               <TextView



                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Verification Doc."

                   android:textColor="@color/dark_grey_button"
                   android:fontFamily="@font/mont_reg"
                   android:textSize="10sp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/mont_semibold"
                       android:textSize="16sp"

                       android:textColor="@color/black"
                       android:text="filename.doc"/>
                   <ImageView
                       android:layout_marginLeft="65dp"
                       android:layout_width="14dp"
                       android:layout_weight="1"


                       android:layout_height="16dp"
                       android:src="@drawable/attach_icon"/>



               </LinearLayout>

               <View

                   android:layout_marginTop="16dp"

                   android:layout_height="1dp"
                   android:background="@color/chart_light_grey"
                   android:layout_width="match_parent"
                   >


               </View>








           </LinearLayout>




           <FrameLayout
               android:layout_marginTop="90dp"
               android:padding="10dp"
               android:layout_width="match_parent"
               android:background="@drawable/button_box"
               android:layout_height="wrap_content">

               <Button

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Done"
                   android:textAllCaps="false"
                   android:fontFamily="@font/mont_med"
                   android:textColor="@color/white"
                   android:background="@drawable/button_edges"
                   />

           </FrameLayout>


       </LinearLayout>






   </ScrollView>





</LinearLayout>