<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".error_report">


    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBackArrow"
            android:layout_marginTop="2dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_arrow"

            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont_semibold"
            android:text="Error Report"
            android:textColor="@color/black"
            android:textSize="16sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="29dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="18dp"
                android:src="@drawable/headfone"></ImageView>
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/chart_light_grey"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/home_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="License Plate Number Displaying (Click LCD image) "
                android:textColor="@color/red_button"
                android:textSize="8sp"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="AAACH14423P"
                    android:textColor="@color/black"
                    android:textSize="12sp">

                </TextView>

                <RelativeLayout
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"


                        android:layout_marginRight="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/camera"></ImageView>
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="0.7dp"


                android:background="@color/chart_light_grey"
                ></View>
            <ImageView
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:src="@drawable/screen_big"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/mont_reg"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:text="Capture License Plate Pic"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="filename.jph"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="remove"
                    android:textColor="@color/red_button"
                    android:textSize="10sp"
                    android:layout_marginLeft="60dp"

                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="License Plate Number Actual (Click License plate image) "
                android:textColor="@color/app_caption_dark_grey"
                android:textSize="8sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="AAACH14423P"
                    android:textColor="@color/black"
                    android:textSize="12sp">

                </TextView>

                <RelativeLayout
                    android:layout_marginBottom="2dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"

                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"                    android:src="@drawable/camera"></ImageView>
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="0.7dp"
                android:background="@color/chart_light_grey"
                ></View>

            <ImageView
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:src="@drawable/car_back"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/mont_reg"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:text="Capture License Plate Pic"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="filename.jph"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="remove"
                    android:textColor="@color/red_button"
                    android:textSize="10sp"
                    android:layout_marginLeft="60dp"

                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/app_caption_dark_grey"
                android:text="Enter Details"></TextView>
            <TextView
                android:padding="5dp"
                android:textSize="8sp"
                android:background="@drawable/button_box_whiteback"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Notes if any"></TextView>
        </LinearLayout>



    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/button_box_redback"
            android:layout_alignParentEnd="true"

            android:text="Submit and Stop Parking"></Button>
    </RelativeLayout>





</LinearLayout>