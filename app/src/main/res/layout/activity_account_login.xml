<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/home_background"

    tools:context=".Activities.LoginActivity">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2.5"
        android:src="@drawable/asset_2hdpi"
        android:id="@+id/watermark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"


            android:id="@+id/tag">

            <LinearLayout

                android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                >



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Better Service "
            android:layout_marginBottom="5dp"

            android:fontFamily="@font/mont_bold"
            android:textColor="@color/red_button"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy Customers"
            android:textSize="20sp"
            android:fontFamily="@font/mont_bold"
            android:textColor="@color/red_button"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"

            android:textColor="@color/dark_grey_button"
            android:paddingTop="20dp"
            android:fontFamily="@font/gotham_book"
            android:text="Lorem Ipsum is simply dummy text of typesetting and printing industry"/>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"


            android:layout_margin="16dp"
            android:id="@+id/mid">

            <LinearLayout

                android:layout_width="match_parent"
                android:background="@color/home_background"
                android:layout_gravity="center"

                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:layout_marginTop="2dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/gotham_med"
                    android:textColor="@color/black"/>

                <TextView android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/dark_grey_button"
                    android:fontFamily="@font/mont_med"
                    android:text="Login to enjoy hassle free and full access of our services" />

                <Button


                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Login"
                    android:id="@+id/login"
                    android:fontFamily="@font/mont_med"
                    android:textAllCaps="false"
                    android:background="@drawable/button_bg"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/red_button" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"

            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:id="@+id/bottom"


                >

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/home_background"
                    android:id="@+id/faq">

                    <ImageView
                        android:src="@drawable/question_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:textColor="@color/black2"
                        android:textSize="14sp"
                        android:text="FAQs"
                        android:fontFamily="@font/mont_semibold"
                        android:layout_marginLeft="16dp"
                        android:layout_height="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="5" />

                    <ImageView
                        android:layout_marginTop="8dp"
                        android:src="@drawable/arrow_icon"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="10dp" />


                </LinearLayout>

                <View

                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="1dp"
                    android:background="#c1cdc1"
                    android:layout_width="match_parent">


                </View>


                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/feedback">

                    <ImageView
                        android:src="@drawable/message_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_weight="5"
                        android:textColor="@color/black2"
                        android:text="Send feedback"
                        android:fontFamily="@font/mont_semibold"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:src="@drawable/arrow_icon"
                        android:layout_marginTop="8dp"
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1" />


                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>

