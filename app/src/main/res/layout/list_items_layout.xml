<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ImgBtn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/radio_whitecircle"


        android:textColor="@color/green2"></ImageButton>

    <ImageView


        android:id="@+id/ImgVehicle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/wagonr"></ImageView>


    <LinearLayout
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="20dp">
        <TextView
            android:id="@+id/VehicleName"
            android:text="WagonR"
            android:fontFamily="@font/mont_semibold"
            android:textSize="14sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>

        <TextView
            android:id="@+id/VehicleNumber"
            android:text="DL1PB3201"
            android:fontFamily="@font/mont_reg"
            android:textSize="14sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>




    </LinearLayout>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/pencil_edit"></ImageView>



    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/delete_bin"></ImageView>


</LinearLayout>