<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".handsfreeAccess">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/app_caption_dark_grey"
        android:fontFamily="@font/mont_med"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Contrary to popular beilef ,lorem ipsum is not simply random text.It has roots in a piece of classic latin literature from 45BC, making it over 2000 years old">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/app_caption_dark_grey"
        android:fontFamily="@font/mont_med"
        android:padding="20dp"
        android:text="Richard McClintok,a latin professor at Hampden-sydney college in Virginia,looked up one of the more obsecure Latin words,consecture,from a Lorem Ipsum passage,and going thnrough the cites of the word in classical literature,discovered the undoubtable source.">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/mont_semibold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="20dp"
        android:text="To activate this functionality, we need the following information:"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
           android:src="@drawable/taxi_icon"
            ></ImageView>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/app_caption_dark_grey"
            android:text="Your vehicle details."
            android:fontFamily="@font/mont_reg"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/creditcard"
            ></ImageView>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/app_caption_dark_grey"
            android:text="Your vehicle details."
            android:fontFamily="@font/mont_reg"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/person2"
            ></ImageView>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/app_caption_dark_grey"
            android:text="Your Personal In formation."
            android:fontFamily="@font/mont_reg"></TextView>
    </LinearLayout>


    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Activate"
            android:fontFamily="@font/mont_reg"
            android:background="@drawable/button_box_redback"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            ></Button>
    </RelativeLayout>

</LinearLayout>