<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/home_background"
    android:layout_height="match_parent"
    tools:context=".Activities.VehicleChoose">

    <TextView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/grey_white"
        android:fontFamily="@font/mont_reg"
        android:text="Please allocate your vehicle and the following details:"></TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_box_redback"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bike"></ImageView>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="Bike"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_box_whiteback"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_icon"></ImageView>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:text="Car"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"></TextView>
        </LinearLayout>
        <View
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:background="@drawable/button_box_redback"
            ></View>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"

            android:background="@drawable/button_box"
            >

            <TextView

                android:padding="10dp"
                android:fontFamily="@font/mont_reg"
                android:textColor="@color/grey_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Brand"
                android:textSize="12sp"></TextView>
            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"


            android:background="@drawable/button_box"
            >

            <TextView

                android:padding="10dp"
                android:fontFamily="@font/mont_reg"
                android:textColor="@color/grey_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Model"
                android:textSize="12sp"></TextView>
            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"></ImageView>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_box_whiteback"
        android:layout_marginLeft="20dp"
        android:padding="5dp"

        android:layout_marginRight="20dp">
        <TextView
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Insurance"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mont_semibold"></TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/flip_green"></ImageView>
    </LinearLayout>




    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part2"
        android:layout_below="@id/part1"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License Plate Number:"
            android:textSize="8sp"
            android:textColor="@color/grey_white"
            android:fontFamily="@font/mont_reg"
            android:id="@+id/click1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/click1"
            android:drawableRight="@drawable/camera"
            android:textSize="16sp"
            android:text="AAACH14423P"
            android:textStyle="bold"
            android:fontFamily="@font/mont_semibold"
            android:id="@+id/car_num1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_num"
            android:id="@+id/actual"
            android:layout_below="@id/car_num1"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture License Plate pic"
            android:layout_below="@id/actual"
            android:textSize="10sp"
            android:textColor="@color/light_black"
            android:fontFamily="@font/mont_semibold"
            android:id="@+id/capture1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/capture1"
            android:layout_marginTop="10dp"
            android:id="@+id/ll2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/file_name1"
                android:textSize="14sp"
                android:text="filename.jpeg"
                android:textColor="@color/black"
                android:paddingRight="40dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="15"
                android:fontFamily="@font/mont_reg"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="remove"
                android:textSize="10sp"
                android:textColor="@color/red_button"
                android:clickable="true"
                android:fontFamily="@font/mont_reg" />


        </LinearLayout>





    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_box_redback"
        android:text="Add Vehicle"
        android:fontFamily="@font/mont_reg"
        android:textColor="@color/white"></Button>

    </RelativeLayout>
</LinearLayout>