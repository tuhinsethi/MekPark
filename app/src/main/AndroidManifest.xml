<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mekpark">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MekPark"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MekCoinsStatement"></activity>
        <activity android:name=".Activities.StopParkingActivity" />
        <activity
            android:name=".Activities.LocationHistActivity"
            android:label="Location History"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ProgressParking"
            android:theme="@style/AppTheme" />
        <activity android:name=".parking_cancelled" />
        <activity android:name=".Activities.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.CheckoutActivity"
            android:label="Checkout"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.OpenActivity"
            android:label=""
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.CompletionActivity"
            android:label=""
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.FeedbackActivity"
            android:label="Feedback"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.AwaitingParkingActivity"
            android:label=""
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.PrintReceiptActivity"
            android:label="Receipt"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ErrorActivity"
            android:label="Error Report"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ParkingStatusActivity"
            android:label=""
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ProfileActivity"
            android:label="Profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.LoginActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.NavActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>